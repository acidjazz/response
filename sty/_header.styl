
_animation = 0.2s all 0.2s ease-in-out

.header
  position fixed
  left 0
  top 0
  width 100%
  > .inner
    background-color grey2
    border-bottom 0.2em solid grey1
    padding 0 3em
    > .logo
      float left
      font-family fnt_tit
      font-weight 700
      transition _animation
    > .motto
      float left
      color grey3
      transition _animation

    > .menu
      float right
      transition _animation
      > a
        display block
        float left
        border-bottom 0.3em solid transparent
        transition _animation
        &:hover
          cursor pointer
          border-bottom 0.3em solid purple
  > .bottom
    height 0.5em
    background rgba(grey2, 0.5)
    margin 0 3em

  &.large
    > .inner
      > .logo
        font-size 6em
        padding 0 0 0 0.3em
      > .motto
        margin 7.0em 0 0 -7.5em
      > .menu
        > a
          padding 5.7em 1em 0.5em 1em
          font-size 1.2em

  &.small
    > .inner
      > .logo
        font-size 2em
        padding 0 0 0 0.2em
      > .motto
        margin 1em 0 0 0.5em
      > .menu
        > a
          padding 1em 1em 0.3em 1em
          font-size 1em
